<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.shape.Rectangle?>
<?import controllers.NumberField?>
<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.GenerateExamTopicRowController"
      spacing="10" HBox.hgrow="ALWAYS" maxWidth="Infinity">
        <Rectangle width="20" HBox.hgrow="NEVER"/>
        <CheckBox fx:id="isSelected" prefWidth="20" HBox.hgrow="NEVER"></CheckBox>
        <Label fx:id="lbl_topic_name" prefWidth="200" HBox.hgrow="ALWAYS" maxWidth="Infinity"></Label>
        <NumberField fx:id="diff_max_level" prefWidth="150" HBox.hgrow="NEVER"></NumberField>
        <NumberField fx:id="topic_number_of_questions" prefWidth="150" HBox.hgrow="NEVER"></NumberField>
</HBox>
