<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.ChaptersTableController">
    <Label text="Chapters" styleClass="rounded-header" prefWidth="150" prefHeight="30" alignment="CENTER"/>
    <VBox spacing="10" styleClass="rounded-box">
        <ListView fx:id="chapters_list_view" VBox.vgrow="ALWAYS">
            <items>
                <FXCollections fx:factory="observableArrayList">

                </FXCollections>
            </items>
        </ListView>

        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="add_chapter" onAction="#onAddChapterClicked" text="Add"/>
            <Button fx:id="edit_chapter" text="Edit" onAction="#onEditChapterClicked"/>
            <Button fx:id="delete_chapter" text="Delete" onAction="#onDeleteChapterClicked"/>

        </HBox>
    </VBox>
</VBox>
