<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import controllers.NumberField?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.GenerateExamController"
            prefHeight="400.0" prefWidth="600.0">
    <VBox spacing="10" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="20"
          AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">
        <HBox spacing="50">
            <VBox spacing="10">
                <Label text="Exam name"></Label>
                <TextField promptText="1st Year (Electronics and Communications Engineering)"
                           fx:id="exam_name_text"></TextField>
                <Label text="College" fx:id="college_label"></Label>
                <TextField fx:id="college_text"></TextField>
                <Label text="Department"></Label>
                <TextField fx:id="department_text"></TextField>
                <Label text="Note"></Label>
                <TextArea promptText="Attempt 5 of the following questions (including questions 1 and 2)"
                          fx:id="note_text"></TextArea>
            </VBox>
            <VBox spacing="10">
                <ComboBox value="Exam type" fx:id="exam_type">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:id="exam_type_option1" fx:value="Quiz"/>
                            <String fx:id="exam_type_option2" fx:value="Midterm Exam"/>
                            <String fx:id="exam_type_option3" fx:value="Final Exam"/>
                        </FXCollections>
                    </items>
                </ComboBox>
                <Label text="Date"></Label>
                <TextField promptText="Mon 05/01/2015" fx:id="exam_date"></TextField>
                <Label text="Duration"></Label>
                <TextField fx:id="exam_duration"></TextField>
                <Label text="Total marks"></Label>
                <TextField fx:id="exam_total_marks"></TextField>
            </VBox>
        </HBox>
    <ComboBox value="Number of models" fx:id="number_of_models">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:id="option1" fx:value="1"/>
                <String fx:id="option2" fx:value="2"/>
                <String fx:id="option3" fx:value="3"/>
                <String fx:id="option4" fx:value="4"/>
                <String fx:id="option5" fx:value="5"/>
                <String fx:id="option6" fx:value="6"/>

            </FXCollections>
        </items>
    </ComboBox>
        <VBox fx:id="same_or_different" spacing="5">
        <RadioButton fx:id="radio_same" text="Same questions"/>
        <RadioButton fx:id="radio_different" text="Different questions"/>
        </VBox>

    <VBox fx:id="shuffle" spacing="5">

        <RadioButton fx:id="radio_shuffle_questions" text="Shuffle question"/>

    </VBox>
        <Separator/>
        <HBox spacing="10">
            <Label text="Exam chapters" prefWidth="230"/>
            <Label text="Number of easy questions" prefWidth="200"/>
            <Label text="Number of medium questions" prefWidth="200"/>
            <Label text="Number of hard questions" prefWidth="200"/>
        </HBox>

        <VBox fx:id="content" spacing="10">

        </VBox>
    </VBox>
    <HBox spacing="20" AnchorPane.bottomAnchor="10"  AnchorPane.rightAnchor="10"
          AnchorPane.leftAnchor="10" alignment="CENTER">
        <Button text="Generate" fx:id="generate" onAction="#onGenerateClicked"/>
        <Button text="Cancel" fx:id="cancel"/>
    </HBox>
</AnchorPane>
