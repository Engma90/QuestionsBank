            </VBox>
            <VBox opacity="0.9" HBox.hgrow="ALWAYS" fx:id="right_content"/>
            <!--</SplitPane>-->
        </HBox>
    </VBox>
    <VBox>
        <HBox spacing="20" minHeight="40" alignment="CENTER" style="-fx-background-color:rgba(28,23,99,0.5);">
            <Button fx:id="generate_exam" text="Generate exam" onAction="#onGenerateExamClicked"/>
            <Button fx:id="import_csv" text="Import" onAction="#onImportClicked"></Button>
            <Button fx:id="export_csv" text="Export" onAction="#onExportClicked"></Button>
        </HBox>
        <HBox minHeight="10" style="-fx-background-color:#F2C114">
        </HBox>
    </VBox>
