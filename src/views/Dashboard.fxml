<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.DashboardController" stylesheets="@css/Dashboard.css" fx:id="container" spacing="10">
    <HBox style="-fx-background-color:rgba(28,23,99,0.5);">
        <ImageView>
            <Image url="/views/images/Dashboard_logo4.png"/>
        </ImageView>
    </HBox>
    <VBox spacing="10">
        <padding>
            <Insets top="10" right="5" bottom="0" left="5"/>
        </padding>

        <HBox spacing="10">
            <!--<SplitPane fx:id="splitPane" HBox.hgrow="ALWAYS">-->
