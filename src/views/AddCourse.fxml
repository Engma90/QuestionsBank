<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.AddCourseController"
            prefHeight="250.0" prefWidth="300.0">
    <VBox spacing="20" AnchorPane.topAnchor="20" AnchorPane.rightAnchor="20"
          AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" alignment="CENTER">
        <HBox spacing="10">
            <Label text="Course code "></Label>
            <TextField fx:id="course_code"></TextField>
        </HBox>
        <HBox spacing="10">
            <Label text="Course name"></Label>
            <TextField fx:id="course_name"></TextField>
        </HBox>
        <Button text="Add" fx:id="add_course" onAction="#onAddCourseClicked"></Button>
    </VBox>

</AnchorPane>
