<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.image.Image?>
<?import controllers.MyButton?>
<?import javafx.scene.image.ImageView?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.HomeController"
            prefHeight="600.0" prefWidth="700.0"
            stylesheets="@css/Home.css" fx:id="container">

    <HBox AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10"
          AnchorPane.bottomAnchor="40" alignment="CENTER" spacing="50">
        <MyButton imageUrl="/views/images/btnAbout.png" fx:id="about"
                  prefWidth="56" prefHeight="73"/>
        <MyButton imageUrl="/views/images/btnSignup.png" fx:id="signup" onMouseClicked="#onSignupClicked"
                  prefWidth="66" prefHeight="76"/>
        <MyButton imageUrl="/views/images/btnLogin.png" fx:id="login" onMouseClicked="#onSigninClicked"
                  prefWidth="49" prefHeight="71"/>
    </HBox>

    <VBox AnchorPane.rightAnchor="250" AnchorPane.bottomAnchor="130" spacing="10" fx:id="login_form">
        <HBox alignment="CENTER" spacing="10">
            <!--<Label textFill="#FFFFFF" text="E-mail"></Label>-->
            <ImageView>
                <Image url="/views/images/emailIcon.png"/>
            </ImageView>
            <TextField fx:id="login_email" promptText="E-Mail"/>
            <Rectangle width="24"/>
        </HBox>
        <HBox alignment="CENTER" spacing="10">
            <!--<Label textFill="#FFFFFF"  text="Password" ></Label>-->
            <ImageView>
                <Image url="/views/images/passIcon.png"/>
            </ImageView>
            <PasswordField fx:id="login_password" promptText="Password"/>
            <MyButton prefWidth="24" prefHeight="21" imageUrl="/views/images/loginIcon.png"
                      onMouseClicked="#onLoginClicked">
            </MyButton>
        </HBox>
    </VBox>
</AnchorPane>
