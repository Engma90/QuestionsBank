<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.shape.Rectangle?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.HomeController"
            prefHeight="600.0" prefWidth="700.0" style="
            -fx-background-image:url('/views/images/004.jpg');
            -fx-background-repeat: no-repeat;
            -fx-background-size: 100% 100%;">

    <VBox AnchorPane.leftAnchor="10"  alignment="CENTER" AnchorPane.rightAnchor="10"
          AnchorPane.topAnchor="200" spacing="10" fx:id="login_form">
        <HBox alignment="CENTER" spacing="28">
            <Label text="E-mail"></Label>
            <TextField fx:id="login_email" promptText="E-Mail"></TextField>
        </HBox>
        <HBox  alignment="CENTER"  spacing="10">
            <Label text="Password"></Label>
            <PasswordField fx:id="login_password"></PasswordField>
        </HBox>
        <HBox  alignment="CENTER"  spacing="10">
            <Rectangle width="15"></Rectangle>
            <Button text="Login" fx:id="login" onAction="#onLoginClicked"></Button>
            <Button text="Sign up" fx:id="signup" onAction="#onSignupClicked"></Button>
        </HBox>
    </VBox>

